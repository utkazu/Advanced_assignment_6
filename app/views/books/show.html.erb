<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/template', {user: @user, book: @book} %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user.id), user_id: @user.id do %>
								<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '50x50' %><br>
								<%= @user.name %>
							<% end %>
						</td>
						<td><%= @book_show.title %></td>
						<td><%= @book_show.body %></td>
						<td>
							<%= render 'books/favorite_button', book: @book_show %>
						</td>
						<td>コメント数： <%= @book_show.book_comments.count %></td>
						<td></td>
						<% if @user.id == current_user.id %>
							<td>
								<%= link_to edit_book_path(@book_show.id) do %>
									<button type="button" class="btn btn-success btn-block" aria-label="Left Align">Edit</button>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(@book_show.id), method: :delete, "data-confirm" => "本当に消しますか？" do %>
									<button type="button" class="btn btn-danger btn-block" aria-label="Left Align">Destroy</button>
								<% end %>
							</td>
						<% end %>
					</tr>
				</tbody>
			</table>
			<%= render 'book_comments', comments: @comments %>
			<%= render 'form_book_comment', comment: @comment, book: @book_show %>
		</div>
	</div>
</div>
